        switch(opc){

            case 1:


            break;

            case 2:


            break;

            case 3:

            break;

            case 5:
                return 0;

            break;
            
//mal dijito del menu de opciones
            default:
                gotoxy(12, 15);
                textcolor(cROJO_CLARO);
                cout << "Opcion de menu invalida";
